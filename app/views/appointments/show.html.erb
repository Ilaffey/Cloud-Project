<%= render 'partials/navbar' %>

<br/><br/>
<div class="container ">
    <div class="jumbotron ">
        <div class="row">
            <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                
            </div>
                <div class="col-md-8 col-xs-12 col-sm-6 col-lg-8">
                    <div class="container">
                        <h2 style="text-align:center;">
                            Appointment for : <%= @appointment.patient.name %>
                        </h2>
                    </div>
                    <hr class="colorgraph">

                    <ul class="container details">
                        <!--  Appointment Notes -->
                        <li><textarea readonly>Notes : <%= @appointment.notes %></textarea></li>
                        <!-- Patient Name-->
                        <li><p>Patient : <%= @appointment.patient.name %></p></li>

                    </ul>
                </div>
            </div>
        </div>
        <div style="display: flex; justify-content: center;">
            <%= link_to 'Back', appointments_path, class: "btn btn-dark btn-m" %> |
            <%= link_to 'Edit', edit_appointment_path(@appointment), class: "btn btn-warning btn-m" %>
        </div>
</div>

<%= render 'partials/footer' %>
